# /etc/rauc/system.conf
[system]
compatible=rauc-demo-mx8mm
bootloader=uboot
mountprefix=/mnt/rauc

[keyring]
path=rauc.cert.pem
use-bundle-signing-time=true

[slot.rootfs.0]
device=/dev/ubi0_0
type=ubivol
parent=boot.0

[slot.rootfs.1]
device=/dev/ubi0_1
type=ubivol
parent=boot.1

[slot.boot.0]
device=/dev/mtd6
type=nand
bootname=A

[slot.fdt.0]
device=/dev/mtd7
type=nand
parent=boot.0

[slot.boot.1]
device=/dev/mtd8
type=nand
bootname=B

[slot.fdt.1]
device=/dev/mtd9
type=nand
parent=boot.1
